# Environment
FLASK_ENV=development
FLASK_SECRET_KEY=<SET_IN_ENVIRONMENT>

# Redis Configuration
SESSION_TYPE=redis
UPSTASH_REDIS_URL=redis://localhost:6379

# MySQL Database Configuration for Movies
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=<SET_IN_ENVIRONMENT>
DB_NAME=imdb
DB_PORT=3306

# Secure Connection Pool Settings (Development)
POOL_MIN_SIZE=5                    # Minimum pool size
POOL_MAX_SIZE=20                   # Maximum pool size
MAX_CONN_PER_USER=10              # Max connections per user
MAX_CONN_PER_IP=20                # Max connections per IP
DB_CONNECT_TIMEOUT=5              # Connection timeout (seconds)
DB_QUERY_TIMEOUT=30               # Query timeout (seconds)
DB_POOL_RECYCLE=900              # Recycle connections after 15 min
DB_IDLE_TIMEOUT=300              # Close idle connections after 5 min
MAX_QUERIES_PER_MIN=5000         # Global query rate limit
MAX_USER_QUERIES_PER_MIN=500     # Per-user query rate limit
SLOW_QUERY_THRESHOLD=1.0         # Log queries slower than 1 second

# MySQL Database Configuration for User Accounts
USER_DB_HOST=127.0.0.1
USER_DB_USER=root
USER_DB_PASSWORD=<SET_IN_ENVIRONMENT>
USER_DB_NAME=UserAccounts
USER_DB_PORT=3306

# TMDB API Key - MUST BE SET AS ENVIRONMENT VARIABLE
# TMDB_API_KEY=<SET_IN_ENVIRONMENT>

# SSL Certificate (Optional for Local Testing)
SSL_CERT_PATH=isrgroot.pem
VALIDATE_SSL=false

# Project Root
PROJECT_ROOT=/Users/bryceharmon/Desktop/nextreel-lite

# Grafana Cloud Configuration - SET IN ENVIRONMENT
# GRAFANA_API_TOKEN=<SET_IN_ENVIRONMENT>
# GRAFANA_URL=https://your-instance.grafana.net

# Loki Configuration (for log shipping) - SET IN ENVIRONMENT  
# GRAFANA_LOKI_URL=https://logs-prod-xyz.grafana.net
# GRAFANA_LOKI_USER=<SET_IN_ENVIRONMENT>
# GRAFANA_LOKI_KEY=<SET_IN_ENVIRONMENT>

# Application Version
APP_VERSION=1.0.0

# DO NOT COMMIT ACTUAL SECRETS TO THIS FILE!

# Example environment configuration
# Copy this to .env and fill in your actual values
# NEVER commit .env with real secrets!

FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
TMDB_API_KEY=your-tmdb-api-key-here

# Session Security Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_IDLE_TIMEOUT_MINUTES=15
SESSION_ROTATION_INTERVAL=10
MAX_SESSION_DURATION_HOURS=24
COOKIE_DOMAIN=

# Redis Configuration
SESSION_TYPE=redis
UPSTASH_REDIS_URL=redis://localhost:6379

# MySQL Database Configuration for Movies
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=your-db-password-here
DB_NAME=imdb
DB_PORT=3306

# MySQL Database Configuration for User Accounts
USER_DB_HOST=127.0.0.1
USER_DB_USER=root
USER_DB_PASSWORD=your-user-db-password-here
USER_DB_NAME=UserAccounts
USER_DB_PORT=3306

# Production Redis (Upstash)
UPSTASH_REDIS_HOST=your-redis-host
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD=your-redis-password

# Production Database (Stackhero)
STACKHERO_DB_HOST=your-db-host
STACKHERO_DB_USER=your-db-user
STACKHERO_DB_PASSWORD=your-db-password
STACKHERO_DB_NAME=your-db-name
STACKHERO_DB_PORT=3306

# SSL Certificate (Optional)
SSL_CERT_PATH=

# Project Root
PROJECT_ROOT=/path/to/your/project